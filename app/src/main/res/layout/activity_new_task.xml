<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    tools:context=".NewTaskActivity">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextCodigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Codigo"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextAncho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ancho"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextAlto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Alto"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Area"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextCuotaSemanal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cuota Semanal"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextSaldo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Saldo"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextCantidadCuotas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cantidad Cuotas"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextCuotaActual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cuota Actual"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextDocumentoDelCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Documento Cliente"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextDocumentoDelVendedor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Documento Vendedor"/>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onSave"
        android:text="SAVE"/>

</LinearLayout>