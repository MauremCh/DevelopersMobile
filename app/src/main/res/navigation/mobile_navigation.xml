<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_todo">



    <fragment
        android:id="@+id/nav_todo"
        android:name="com.example.cortinapp.ToDoFragment"
        android:label="fragment_to_do"
        tools:layout="@layout/fragment_to_do" >
        <action
            android:id="@+id/action_nav_todo_to_detailFragment"
            app:destination="@id/nav_detail" />
    </fragment>
    <fragment
        android:id="@+id/nav_about"
        android:name="com.example.cortinapp.AboutFragment"
        android:label="fragment_about"
        android:icon="@drawable/ic_menu_camera"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/nav_detail"
        android:name="com.example.cortinapp.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" />
</navigation>